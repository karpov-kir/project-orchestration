{
  "name": "kk-forge",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build:docker": "docker build --platform=linux/amd64 -t kk-forge.com .",
    "publish:docker": "docker tag kk-forge.com dr.kk-forge.com/kk-forge.com && docker push dr.kk-forge.com/kk-forge.com",
    "start:dev": "vinxi dev",
    "build": "npm run clean && vinxi build",
    "start": "vinxi start",
    "version": "vinxi version",
    "clean": "del-cli ./.vinxi ./.output ./tsconfig.build.tsbuildinfo",
    "start:preview": "vite preview",
    "lint:eslint": "eslint \"src/**/*.{ts,tsx,js,jsx,json}\"",
    "lint:eslint:fix": "npm run lint:eslint -- --fix",
    "lint:stylelint": "stylelint \"src/**/*.{css,scss}\"",
    "lint:stylelint:fix": "npm run lint:stylelint -- --fix",
    "lint": "run-p -c lint:*[!fix]",
    "lint:fix": "run-p -c lint:*:fix",
    "test": "vitest run",
    "test:ci": "vitest run --coverage --reporter default --reporter vitest-sonar-reporter --outputFile=./coverage/test-report.xml",
    "test:debug": "vitest --inspect-brk --pool forks --poolOptions.forks.singleFork",
    "test:watch": "vitest watch"
  },
  "dependencies": {
    "@solidjs/meta": "^0.29.4",
    "@solidjs/router": "^0.15.3",
    "@solidjs/start": "^1.1.3",
    "solid-js": "^1.9.5",
    "tailwind-merge": "^3.0.2",
    "vinxi": "^0.5.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@tailwindcss/postcss": "^4.0.12",
    "@tailwindcss/vite": "^4.0.12",
    "@typescript-eslint/parser": "^8.26.0",
    "@vitest/coverage-v8": "^3.0.8",
    "del-cli": "^6.0.0",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-solid": "^0.14.5",
    "jsdom": "^26.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "prettier-plugin-classnames": "^0.7.6",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "stylelint": "^16.15.0",
    "stylelint-config-standard": "^37.0.0",
    "stylelint-prettier": "^5.0.3",
    "tailwindcss": "^4.0.12",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.0",
    "vite": "^6.2.1",
    "vite-plugin-pretty-module-classnames": "^1.3.2",
    "vite-plugin-sass-dts": "^1.3.31",
    "vite-plugin-solid": "^2.11.6",
    "vite-plugin-solid-svg": "^0.8.1",
    "vitest": "^3.0.8",
    "vitest-mock-extended": "^3.0.1",
    "vitest-sonar-reporter": "^2.0.0"
  }
}
